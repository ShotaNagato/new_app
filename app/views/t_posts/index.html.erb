<% provide(:title, "Posts") %>
<div class="blue">
 <h1>生徒募集一覧</h1>
</div>

<% @posts.each do |t_post| %>
 <div class="row">
  <div class="col-md-6 col-md-offset-3">
   <div class="name">
     <%= link_to t_post.t_user.name, t_post.t_user %>
   </div>
   <div class="recruit">
     <%= t_post.recruit %>
   </div>
  </div>
 </div>
<% end %>

