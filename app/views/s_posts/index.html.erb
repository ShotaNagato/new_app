<% provide(:title, "Posts") %>
<div class="blue">
 <h1>先生募集一覧</h1>
</div>

<% @posts.each do |s_post| %>
 <div class="row">
  <div class="col-md-6 col-md-offset-3">
   <div class="name">
     <%= link_to s_post.s_user.name, s_post.s_user %>
   </div>
   <div class="recruit">
     <%= s_post.recruit %>
   </div>
  </div>
 </div>
<% end %>



